<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i>
        Add Product
      </h1>
      {{> messages}}
      <form
        action="/product/add"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="exampleFormControlFile1">Product Image</label>
          <input
            type="file"
            name="profile-photo"
            class="form-control-file"
            id="exampleFormControlFile1"
          />
        </div>
        <div class="form-group">
          <label for="username">Product Title</label>
          <input
            type="text"
            id="prTitle"
            name="prTitle"
            class="form-control"
            placeholder="Enter Products Title"
            value="{{prTitle}}"
          />
        </div>
        <div class="form-group">
          <label for="firstname">Product Description</label>
          <input
            type="text"
            id="prDesc"
            name="prDesc"
            class="form-control"
            placeholder="Enter Product Description"
            value="{{prDesc}}"
          />
        </div>
        <div class="form-group">
          <label for="lastname">Product Price</label>
          <input
            type="number"
            step="0.01"
            id="prPrice"
            name="prPrice"
            class="form-control"
            placeholder="Enter Product Price"
            value="{{prPrice}}"
          />
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text" for="inputGroupSelect01">Choose a Category</label>
          <select name="CategoryId" class="form-select" id="inputGroupSelect01">
            <option selected>Choose...</option>
            {{#each array}}
                <option value="{{id}}">{{title}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-1"><a href="/dashboard">Return Back</a></p>
    </div>
  </div>
</div>