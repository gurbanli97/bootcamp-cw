<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i>
        Add Category
      </h1>
      {{> messages}}
      <form
        action="/category/add"
        method="POST"
      >
        <div class="form-group">
          <label for="username">Category Title</label>
          <input
            type="text"
            id="catTitle"
            name="catTitle"
            class="form-control"
            placeholder="Enter Category Title"
            value="{{catTitle}}"
          />
        </div>
        <div class="form-group">
          <label for="firstname">Category Description</label>
          <input
            type="text"
            id="catDesc"
            name="catDesc"
            class="form-control"
            placeholder="Enter Category Description"
            value="{{catDesc}}"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-1"><a href="/dashboard">Return Back</a></p>
    </div>
  </div>
</div>